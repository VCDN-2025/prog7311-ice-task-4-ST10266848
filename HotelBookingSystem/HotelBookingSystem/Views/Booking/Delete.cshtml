@model HotelBookingSystem.Models.Booking
@{
    ViewBag.Title = "Delete Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Booking</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this booking?
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.CustomerName</h5>
        <p class="card-text"><strong>Booking Date:</strong> @Model.BookingDate.ToShortDateString()</p>
        <p class="card-text"><strong>Duration:</strong> @Model.Duration days</p>
        <p class="card-text"><strong>Room Type:</strong> @Model.RoomType</p>
    </div>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Booking", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Cancel</a>
}
