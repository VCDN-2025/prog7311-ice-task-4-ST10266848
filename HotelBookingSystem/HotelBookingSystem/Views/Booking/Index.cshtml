@model IEnumerable<HotelBookingSystem.Models.Booking>
@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bookings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Booking Date</th>
            <th>Duration</th>
            <th>Room Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.Duration days</td>
                <td>@booking.RoomType</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = booking.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = booking.Id }, new { @class = "btn btn-warning btn-sm" })
                    @* @Html.ActionLink("Delete", "Delete", new { id = booking.Id }, new { @class = "btn btn-danger btn-sm" }) *@
                </td>
            </tr>
        }
    </tbody>
</table>
