@model HotelBookingSystem.Models.Booking
@{
    ViewBag.Title = "Edit Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Booking</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerName)
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BookingDate)
        @Html.TextBoxFor(m => m.BookingDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.BookingDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Duration)
        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", type = "number", min = "1" })
        @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RoomType)
        @Html.TextBoxFor(m => m.RoomType, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SpecialRequests)
        @Html.TextAreaFor(m => m.SpecialRequests, new { @class = "form-control", rows = 3 })
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Cancel</a>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

